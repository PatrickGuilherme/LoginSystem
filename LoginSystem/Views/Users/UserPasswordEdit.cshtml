@model LoginSystem.ViewModel.PasswordEditModel

@{
    Layout = "_LayoutNotLogin";
    ViewData["Title"] = "Cadastro I";
}

<form asp-controller="Users" asp-action="UserPasswordEdit" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="account-wall">
        <div class="form-group title">
            <h1 class="text-center">Editar usuário</h1>
            <h5 class="text-center">Altere a sua senha de acesso</h5>
        </div>

        <div class="form-group divSpaceMargin">
            <label asp-for="Password" class="control-label"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group divSpaceMargin">
            <label asp-for="PasswordConfirm" class="control-label"></label>
            <input type="password" asp-for="PasswordConfirm" class="form-control" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>

        <div class="form-group divSpaceMargin" style="margin-top:45px;">
            <input type="submit" value="Salvar" class="btn btn-block btn-primary" />
        </div>
        <div class="form-group divSpaceMargin text-center">
            <a asp-action="UserLogin">Voltar</a>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
