@model LoginSystem.Models.User

@{
    Layout = "_LayoutNotLogin";
    ViewData["Title"] = "Usuário Logado";
}

<div class="account-wall">
    <div class="form-group title">
        <h1 class="text-center">Usuário logado</h1>
        <h5 class="text-center">Bem vindo @Model.Name</h5>
    </div>
    <div class="form-group divSpaceMargin">
        <label class="control-label">Nome</label>
        <p><span class="form-text">@Model.Name</span></p>
    </div>
    <div class="form-group divSpaceMargin">
        <label class="control-label">E-mail</label>
        <p><span class="form-text">@Model.Email</span></p>
    </div>
    <div class="form-group divSpaceMargin">
        <label class="control-label">Data Nascimento</label>
        <p><span class="form-text">@Model.BirthData.ToString("dd/MM/yyyy")</span></p>
    </div>
    <div class="form-group divSpaceMargin">
        <label class="control-label">Gênero</label>
        @if (Model.Genre == 'M')
        {
            <p><span class="form-text">Masculino</span></p>
        }
        else if (Model.Genre == 'F')
        {
            <p><span class="form-text">Feminino</span></p>
        }
        else
        {
            <p><span class="form-text">Outro</span></p>
        }
    </div>
    <div class="form-group divSpaceMargin">
        <label class="control-label">Telefone</label>
        <p><span class="form-text">@Model.PhoneNumber</span></p>
    </div>
    <div class="form-group divSpaceMargin">
        <a class="btn btn-info" asp-action="UserPasswordEdit" asp-route-id="@Model.UserId">Editar Senha</a>
        <a class="btn btn-info" asp-action="UserEdit" asp-route-id="@Model.UserId">Editar Perfil</a>
        <a class="btn btn-danger" asp-action="">Deslogar</a>
    </div>
</div>

